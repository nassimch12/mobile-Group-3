<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ClickButtonActivity">

    <Button
        android:id="@+id/myButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomInput"
        android:layout_centerInParent="true"
        android:layout_marginTop="258dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Cliquez ici"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BienvenueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myButton"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/prenomInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="prÃ©nom"
        android:inputType="textPersonName"
        android:padding="20dp" />

    <EditText
        android:id="@+id/nomInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prenomInput"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:text="nom" />

</RelativeLayout>
