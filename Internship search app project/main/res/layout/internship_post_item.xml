<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internship Title:"
            android:textAppearance="?android:textAppearanceLarge"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:id="@+id/internship_title1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28 November 2022"
            android:textAppearance="?android:textAppearanceSmall"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/internship_date1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textAppearance="?android:textAppearanceMedium"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:id="@+id/internship_desc1"
            android:maxLines="10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills: "
            android:padding="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:maxLines="3"
            android:textColor="@color/black"
            android:id="@+id/internship_skills1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company: "
            android:padding="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:maxLines="1"
            android:textColor="@color/black"
            android:id="@+id/internship_company1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: "
            android:padding="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:maxLines="1"
            android:textColor="@color/black"
            android:id="@+id/internship_duration1"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>